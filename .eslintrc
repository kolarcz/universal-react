{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends" : ["airbnb"],
  "rules": {
    "comma-dangle": 0,
    "global-require": 0,
    "import/no-unresolved": 0,
    "no-console": 0,
    "no-param-reassign": ["error", { "props": false }],
    "no-shadow": 0,
    "no-underscore-dangle": 0,
    "react/prefer-stateless-function": 0,
    "react/jsx-no-bind": 0
  },
  "globals": {
    "__DEV__": false,
    "__ENV__": false,
    "__CLIENT__": false
  }
}
